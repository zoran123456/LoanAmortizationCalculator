@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Loan Calculator</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/" Target="_blank" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Width="320px">
        <MudNavMenu>
            <LoanInputForm OnCalculate="CalculateLoan" />
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@inject ILoanCalculator LoanCalculator
@inject LoanStateService StateService

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void CalculateLoan(LoanInput input)
    {
        // 1. Perform the Math (Core Logic)
        var result = LoanCalculator.Calculate(input);

        // 2. Update the State (This triggers Home.razor to refresh)
        StateService.SetResult(result);

        // Optional: Close drawer on mobile automatically
        // if (some condition) _drawerOpen = false;
    }
}